<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> - Adaptive Adoption</title>
    <link rel="icon" type="image/x-icon" href="/public/images/favicon.ico">
    <link rel="stylesheet" type="text/css" href="/public/css/styles.css">
    <% if (typeof customStylesheet !== 'undefined') { %>
        <link rel="stylesheet" type="text/css" href="<%= customStylesheet %>">
    <% } %>
</head>
<body>
    <!-- Collapsed Sidepanel -->
    <div class="overlay"></div>
    <div class="side-menu">
        <button class="close-menu">×</button>
        <div class="side-menu-links">
            <a href="/home">Home</a>
            <a href="/pets/browse">Adopt an Animal</a>
            <a href="/pets/surrender">Surrender a Pet</a>
            <a href="/contact">Contact Us</a>
            <a href="/auth/login" class="login-button-nav">Login</a>
        </div>
    </div>
    <header class="header">
        <!-- Temp Text Logo -->
        <div class="logo">
            <img src="https://picsum.photos/seed/logo/40/40" alt="Adaptive Adoption Logo" />
            <span class="logo-text">
                <span class="logo-blue">Adaptive</span>
                <span class="logo-orange">Adoption</span>
            </span>
        </div>
        <button class="hamburger">☰</button>
        <nav class="nav-menu">
            <a href="/home">Home</a>
            <a href="/pets/browse">Adopt an Animal</a>
            <a href="/pets/surrender">Surrender a Pet</a>
            <a href="/contact">Contact Us</a>
            <a href="/" class="login-button-nav">Login</a>
        </nav>
    </header>

    <main>
        <%- body %>
    </main>

    <script src="/public/js/hamburger.js"></script>
</body>
</html>