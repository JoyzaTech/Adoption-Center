<img src="https://picsum.photos/seed/dog/800/300" alt="Dog" class="hero-image" />
<div class="form-container">
    <form action="/login" method="POST"> <!-- Updated form action and method -->
        <div class="input-group">
            <label for="username">Username or Email</label> <!-- Updated label to reflect either username or email -->
            <input type="text" id="username" name="username" required> <!-- Updated to accept either username or email -->
        </div>

        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>

        <button type="submit" class="primary-button">Log In</button>

        <!-- Display error message if present -->
        <% if (error) { %>
            <div class="error-message">
                <p><%= error %></p>
            </div>
        <% } %>

        <div class="register-link">
            <p>Don't have an account?</p>
            <a href="/register" class="register-button">Register Instead!</a>
        </div>
    </form>
</div>